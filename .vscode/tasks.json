{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Compilar e Executar COBOL",
            "type": "shell",
            "command": "powershell",
            "args": [
                "-Command",
                "& { cobc -x \"${file}\" -o \"${fileDirname}\\${fileBasenameNoExtension}.exe\"; & \"${fileDirname}\\${fileBasenameNoExtension}.exe\" }"
            ],
            "presentation": {
                "reveal": "always",
                "panel": "shared",
                "focus": true
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}
